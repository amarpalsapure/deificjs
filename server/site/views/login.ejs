<% layout('__layout') -%>

<% script('/javascripts/loginrouter.js') -%>
<% script('/javascripts/controllers/accountController.js') -%>
<% script('/javascripts/controllers/loginController.js') -%>
<% script('/javascripts/views/loginView.js') -%>


<script type='text/x-handlebars', data-template-name='login'>
  {{view Deific.HeaderView}}

  <div class='container'>
    <div class='content'>
      <div class='row'>
        <div class='col-xs-12 col-sm-12 col-lg-9'>
          <div class='mainSection'>
            <div class='row border-bottom'>
              <h3 class='mts pll pbsi mbs'>Log In</h3>
            </div>
            <div class='ptm mtm mll mrl'>
              {{#if isLogin}}
                <form id='frmLogin' class="form-horizontal" role="form">
                  <h3>Appacitive Account</h3>
                  <div class="form-group">
                    <div class="col-lg-12 ptm">
                      {{view view.submitTextField valueBinding='view.login.email' type='text' class='login-input form-control login-email' placeholder='Enter your email address'}}
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="col-lg-12">
                      {{view view.submitTextField valueBinding='view.login.password' type='password' class='login-input form-control login-pwd' placeholder='Enter your password'}}
                    </div>
                  </div>
                  <div class='form-group login-error hide'>
                    <div class="col-lg-12">
                      <label class='control-label'>{{view.login.error}} </label>
                    </div>
                  </div>
                  <div class="form-group ptm">
                    <div class="col-lg-12">
                      <button data-loading-text="Log In" class="btn btn-primary" {{action "signIn" target="view"}}>Log In</button>
                      <button data-loading-text="Cancel" class="btn mlm" {{action "cancelSignIn" target="view"}}>Cancel</button>
                    </div>
                  </div>
                </form>
              {{else}}
                <div class='row text-center'>
                  <ul class='nav login-nav'>
                    <li><a href='javascript:void(0)' {{action lgnAppacitive}} class='btn btn-flat btn-skyblue'>login with appacitive</a></li>
                    <li><a href='javascript:void(0)' {{action lgnFacebook}} class='btn btn-flat btn-skyblue'>login with facebook</a></li>
                    <li><a href='javascript:void(0)' {{action lgnTwitter}} class='btn btn-flat btn-skyblue'>login with twitter</a></li>
                  </ul>
                </div>
              {{/if}}
            </div>
          </div>
        </div>
        <div class='col-xs-12 col-sm-12 col-lg-3'>
          <div class='sideSection'>
            <div class='row'>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


  {{view Deific.FooterView}} 
</script>