<% layout('__layout') -%>

<%if (environment === 'production') { %>
    <script type='text/javascript' src='/_min/js/global.combined.js?v=<%=rv%>'></script>
    <script type='text/javascript' src='/_min/js/feedback.combined.js?v=<%= rv %>'></script>
<% } %>
<%if (environment === 'development') { %>
    <% script('/javascripts/router/feedbackRouter.js') -%>

    <% script('/javascripts/controllers/feedbackController.js') -%>

    <% script('/javascripts/views/feedbackView.js') -%>
<% } %>

<script type='text/x-handlebars', data-template-name='feedback'>
{{outlet headerBar}} 

<div class='container'>
  <div class='content'>
    <div class='row question-new-page'>
      <div class='col-xs-12 col-sm-12 col-lg-9 z-index-1'>
        <div class='mainSection'>
            {{#if view.successFeedback}}
                <div class="row">
                    <div class='col-lg-12'>
                        <h4 class='mbs mts'>Thanks for your Feedback</h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        Thank you for taking the time to share your feedback. Your comments and suggestions will help us to serve you better.
                    </div>
                </div>
            {{else}}
            <form id='frmNewQuestion' class='form-horizontal' role='form'>
                <div class='form-group mbn'>
                  <div class='col-lg-12'>
                    <h4 class='mbs mts'>Feedback</h4>
                  </div>
                    <div class='col-lg-12 pts pbl'>
                        Thank you for taking the time to provide feedback. By providing us your feedback, you are helping us understand what we do well and what improvements we need to implement.
                    </div>
                </div>
                <div class='form-group mbm'>
                  <div class='col-lg-12'>
                    {{view Ember.TextArea id='txtFeedback' name='wmd-input' placeholder='Please provide your comments or suggestions here. (minimum 20 characters)' valueBinding='view.question.text'}}
                  </div>
                </div>
                <div class='form-group'>
                    <div class='col-lg-12 muted pbm ptl font9'>
                        * The information given within the feedback will be used for service improvement only and are strictly confidential.
                    </div>
                    <div class='col-lg-12'>
                        <button id='btnSubmitFeedback' disabled='disabled' class='btn btn-large btn-primary mrm' data-loading-text='Submitting Your Feedback' href='javascript:void(0)' {{action 'submitFeedback' target=view}}>Submit Your Feedback</button>
                    </div>
                    <div class='col-lg-12'>
                        <div class='alert-dismiss-container feedbackError pull-left mtm'>
                        </div>
                    </div>
                </div>
              </form>
            {{/if}}
        </div>
      </div>
      <div class='col-xs-12 col-sm-12 col-lg-3 z-index-0 sideSection-container slideSideSection'>
        <div class='sideSection'>
          <div class='row'>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{{render 'footer'}} 
</script>